@model QuanLyKhachSan.ViewModel.HotelDetailsViewModel
@{
    ViewBag.Title = "DetailRoom";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<style>
    .star1 {
        font-size: 30px;
        color: gray;
        cursor: pointer;
    }

        .star1:hover,
        .star1.active {
            color: #f85959;
        }
</style>

<div class="hero-wrap js-fullheight" style="background-image: url('https://onetouchmedia.vn/wp-content/uploads/2019/10/N.NT-65-1024x683.jpg'); height: 200px">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center" style="margin-top: 200px" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
                    <span class="mr-2"><a href="/">Trang chủ</a></span>
                    <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Khách sạn @Model.Name</h1>
            </div>
        </div>
    </div>
</div>


<section class="ftco-section ftco-degree-bg">

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-12 hotel-single mt-4 mb-5 ">

                        <h2>Khách sạn: @Model.Name</h2>
                        <h5>Địa chỉ : @Model.Address - Số điện thoại </h5>


                        <h5>Mô tả</h5>
                        <p>@Html.Raw(Model.Description)</p>
                    </div>

                </div>
            </div> <!-- .col-md-8 -->
        </div>
    </div>

</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-start mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate">
                <span class="subheading">Top 3</span>
                <h2 class="mb-4">Phòng có lượt xem nhiều</h2>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in ViewBag.ListRoomTop5)
            {
            <div class="col-md-4">
                <div class="destination">
                    <a href="/PublicRoom/DetailRoom/@item.idRoom">
                        <img width="380px" class="img img-2 d-flex justify-content-center align-items-center" src="/Content/images/@item.image">

                    </a>
                    <div class="text p-3">
                        <div class="d-flex">
                            <div class="one">
                                <h3><a href="/PublicRoom/DetailRoom/@item.idRoom">@item.name</a></h3>
                                <p class="rate">
                                    <i class="icon-star"></i>
                                    <i class="icon-star"></i>
                                    <i class="icon-star"></i>
                                    <i class="icon-star"></i>
                                    <i class="icon-star"></i>
                                    <span>@item.view lượt xem</span>
                                </p>
                            </div>

                            @{
                                int price1 = item.cost - item.cost * item.discount / 100;
                            }

                        </div>
                        @*   <p>Far far away, behind the word mountains, far from the countries</p>*@
                        <p class="days"><span>@item.Type.name</span></p>
                        <hr>
                        <p class="bottom-area d-flex">
                            <span>Giá phòng : @price1 VNĐ</span>
                            <span class="ml-auto"><a href="/PublicRoom/DetailRoom/@item.idRoom">Xem chi tiết</a></span>
                        </p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>

